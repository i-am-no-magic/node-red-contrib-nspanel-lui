{
    "name": "node-red-contrib-nspanel-lui",
    "version": "0.0.1-alpha.25",
    "description": "node-red-contrib-nspanel-lui",
    "license": "Apache-2.0",
    "contributors": [
        {
            "name": "Sebastian Schneider"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/laluz742/node-red-contrib-nspanel-lui.git"
    },
    "node-red": {
        "nodes": {
            "nspanel-config": "nodes/nspanel-config.js",
            "nspanel-panel": "nodes/nspanel-panel.js",
            "nspanel-controller": "nodes/nspanel-controller.js",
            "nspanel-hmi-control": "nodes/nspanel-hmi-control.js",
            "nspanel-page-entities": "nodes/nspanel-page-entities.js",
            "nspanel-page-grid": "nodes/nspanel-page-grid.js",
            "nspanel-page-power": "nodes/nspanel-page-power.js",
            "nspanel-page-qr": "nodes/nspanel-page-qr.js",
            "nspanel-page-thermo": "nodes/nspanel-page-thermo.js",
            "nspanel-screensaver": "nodes/nspanel-screensaver.js"
        }
    },
    "scripts": {
        "clean": "rimraf build lib nodes resources coverage",
        "prebuild": "npm run clean",
        "build": "tsc",
        "copyNodes": "npx copyfiles --up 2 src/nodes/**/*.json src/nodes/**/*.html src/nodes/**/*.js build/nodes/",
        "copyRes": "npx copyfiles --up 2 src/resources/nspanel*.js build/resources/",
        "copyGlue": "npx copyfiles --up 2 src/lib/**/*.js build/lib/",
        "postbuild": "npm run copyNodes && npm run copyGlue && npm run copyRes",
        "test": "jest",
        "format": "prettier --write \"**/*.{js,ts,json,html,md}\"",
        "prepack": "rimraf lib nodes resources && npx copyfiles --exclude **/types.js --up 1 build/lib/**/* build/nodes/**/* build/resources/**/* .",
        "postpack": "rimraf lib nodes resources"
    },
    "devDependencies": {
        "@types/node": "^14.14.7",
        "@types/node-red": "^1.2.1",
        "jest": "^29.5.0",
        "node-red": "^3.0.2",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.5",
        "typescript": "^5.2.2",
        "ts-prune": "^0.10.3"
    },
    "dependencies": {
        "cronosjs": "^1.7.1",
        "mqtt": "^4.3.7",
        "uuid": "^8.3.2"
    }
}
