{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "jsx": "preserve",
        "declaration": false,
        "sourceMap": false,
        "outDir": "build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "rootDir": "src",
        "lib": ["es6", "dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/test/*", "lib/interfaces/*", "build"]
}
